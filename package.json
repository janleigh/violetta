{
	"name": "violetta",
	"description": "A (not-so) generic helper bot for Discord.",
	"version": "1.0.0",
	"author": {
		"name": "janleigh",
		"url": "https://github.com/janleigh/violetta"
	},
	"license": "AGPL-3.0-only",
	"main": "src/index.ts",
	"scripts": {
		"start": "bun run start:prod",
		"dev": "bun run start:dev",
		"start:dev": "NODE_ENV=development bun run src/index.ts",
		"start:prod": "NODE_ENV=production bun run src/index.ts",
		"format": "biome format . --write",
		"lint": "biome lint .",
		"check": "biome check . --write"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@sapphire/pieces": "^4.4.1",
		"@types/bun": "latest"
	},
	"dependencies": {
		"@sapphire/decorators": "^6.2.0",
		"@sapphire/framework": "^5.3.7",
		"@sapphire/plugin-logger": "^4.1.0",
		"axios": "^1.13.2",
		"discord.js": "^14.24.2",
		"dotenv": "^16.6.1"
	},
	"peerDependencies": {
		"typescript": "^5.8.3"
	}
}
